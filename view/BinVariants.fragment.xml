<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		class="sapUiPopupWithPadding"
		noDataText="No Storage Bins found"
		title="Select Bin"
		search=".onSearch"
		confirm="onBinVariantChosen"
		cancel="onBinVariantChosen"
		items="{BinVariants>/results}">
		<StandardListItem 
			title="{BinVariants>StorageType}"
			description="{BinVariants>StorageBin} - {BinVariants>Warehouse}"
		/>
	</SelectDialog>
</core:FragmentDefinition>